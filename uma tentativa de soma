#include <stdio.h>
int main() {
    int A[3][3];
    int B[3][3];
    int C[3][3];
    int i,j,k,m,h,o;
    printf("digite valores para a 1ª matriz 3x3 \n");
    for(i=0;i<=2;i++)
    {
    for(j=0;j<=2;j++)
    {
    printf("A[%d][%d]= ",i,j);
    scanf("%d",&A[i][j]);
    }
    }
    for(i=0;i<=2;i++)
    {
    for(j=0;j<=2;j++)
    {
    printf("%d ",A[i][j]);
    }
    printf("\n");
    }
    
    
    printf("digite valores para a 2ª matriz 3x3 \n");
    for(k=0;k<=2;k++)
    {
    for(m=0;m<=2;m++)
    {
    printf("B[%d][%d]= ",k,m);
    scanf("%d",&B[k][m]);
    }
    }
    for(k=0;k<=2;k++)
    {
    for(m=0;m<=2;m++)
    {
    printf("%d ",B[k][m]);
    }
    printf("\n");
    
    }
    printf("soma = \n");
    
    for(k=0;k<=2;k++)
    {
    for(m=0;m<=2;m++)
    {
    C[h][o] = A[i][j]+B[k][m];
    printf("%d ",C[h][o]);
    }
    printf("\n");
    }

    
    return 0;
}
